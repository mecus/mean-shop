extends layout
block content
    .container(style="margin-top:70px;")
        .w3-card-4-9(style="width:600px; margin: 0 auto;")
            form.jumbotron(class="deptForm", action="/admin/cat", method="POST")
                .form-input.form-group
                    input.form-control(name ='name', required='', type='text', placeholder='Group')
                    input.form-control(value=queryId hidden="" name ='department_id', required='', type='text', placeholder='dept_id')
                .save-btn
                    button.btn.btn-primary(type='submit')  Save
            div.jumbotron
                table.table.table-striped
                    thead.thead-default
                        tr
                            th
                                h4 Groups => #{department.name}
                            th 
                            th(colSpan="1")
                            th
                                span.badge.badge-default.badge-pill
                                    i.fa.fa-plus(aria-hidden='true' onclick="openForm()" id="true")
                    tbody
                        each cat in category
                            tr
                                td= cat.name
                                //- td= cat.id
                                td
                                    span.badge.badge-default.badge-pill
                                        a(href="/admin/subcat/add/"+cat.id  id=cat.id) Select
                                            //- i.fa.fa-plus(aria-hidden='true') 
                                td
                                    span.badge.badge-default.badge-pill
                                        a(href="" onclick="deleteCategory(this)" data-id=cat.id)
                                            i.fa.fa-times(aria-hidden='true') 
            button.btn.btn-primary(onclick='backward()')  Back